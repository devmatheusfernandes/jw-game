rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --------- AUTH ---------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.IsAdmin == true;
    }

    function validLevel(level) {
      return level in ['easy', 'medium', 'hard', 'very_hard'];
    }

    function nonEmptyString(s) {
      return (s is string) && (s != "");
    }

    function topicExists(topicId) {
      return exists(/databases/$(database)/documents/topics/$(topicId));
    }

    function hasAtLeastOneQuestion(qs) {
      return (qs is list) && (qs.size() >= 1);
    }

    function firstQuestionExists(qs) {
      return hasAtLeastOneQuestion(qs) && exists(/databases/$(database)/documents/questions/$(qs[0]));
    }

    // --------- UNIVERSAL CONTENT (ADMIN ONLY) ---------
    match /topics/{topicId} {
      allow read: if true;
      allow create: if isAdmin() && nonEmptyString(request.resource.data.name);
      allow update, delete: if isAdmin();
    }

    match /questions/{questionId} {
      allow read: if true;
      allow create: if isAdmin() &&
        topicExists(request.resource.data.topicId) &&
        nonEmptyString(request.resource.data.questionTitle) &&
        (request.resource.data.options is list) &&
        (request.resource.data.options.size() >= 2) &&
        validLevel(request.resource.data.level) &&
        (request.resource.data.questionType == 'multiple_choice');
      allow update, delete: if isAdmin();
    }

    match /decks/{deckId} {
      allow read: if true;
      allow create: if isAdmin() &&
        nonEmptyString(request.resource.data.title) &&
        topicExists(request.resource.data.topicId) &&
        validLevel(request.resource.data.level) &&
        firstQuestionExists(request.resource.data.questions);
      allow update, delete: if isAdmin();
    }

    // --------- USER-OWNED CONTENT ---------
    // USER PROFILE DOC
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) &&
        request.resource.data.keys().hasOnly(['id','IsAdmin']) &&
        request.resource.data.id == userId &&
        request.resource.data.IsAdmin == false;
      allow update, delete: if isAdmin();
    }

    // USER DECKS
    match /users/{userId}/decks/{deckId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

    // USER QUESTIONS
    match /users/{userId}/questions/{questionId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

    // --------- GAME RESULTS (somente o próprio usuário) ---------
    match /gameResults/{gameId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    // --------- SESSIONS (tempo real) ---------
    match /sessions/{sessionId} {
      allow read: if resource.data.opened == true || (isSignedIn() && request.auth.uid == resource.data.hostId) || isAdmin();
      allow create: if isSignedIn() && request.resource.data.hostId == request.auth.uid;
      allow update: if isSignedIn() && request.auth.uid == resource.data.hostId;
      allow delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.hostId);
    }

    match /sessions/{sessionId}/users/{uid} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == uid;
      allow update, delete: if isSignedIn() && request.auth.uid == uid;
    }

    match /sessions/{sessionId}/answers/{answerId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
    }

  }
}
